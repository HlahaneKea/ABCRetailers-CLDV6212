@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<h2><i class="fas fa-list-alt"></i> My Orders</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Product</th>
                    <th>Order Date</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td><code>@(order.OrderId?.Length >= 8 ? order.OrderId.Substring(0, 8) + "..." : order.OrderId)</code></td>
                        <td>@order.ProductName</td>
                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                        <td>@order.Quantity</td>
                        <td>@order.TotalPrice.ToString("C")</td>
                        <td>
                            <span class="badge bg-@(GetStatusBadgeClass(order.Status))">
                                @order.Status
                            </span>
                            @if (order.Status == "PROCESSED")
                            {
                                <br />
                    
                                <small class="text-success"><i class="fas fa-check-circle"></i> Processed by Admin</small>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-sm btn-outline-info" title="View Details">
                                <i class="fas fa-eye"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> You haven't placed any orders yet.
        <a asp-controller="Product" asp-action="Index" class="alert-link">Browse products</a> to get started!
    </div>
}

@{
    string GetStatusBadgeClass(string status) => status?.ToUpper() switch
    {
        "SUBMITTED" => "primary",
        "PROCESSING" => "info",
        "PROCESSED" => "success",
        "COMPLETED" => "success",
        "CANCELLED" => "danger",
        _ => "secondary"
    };
}

