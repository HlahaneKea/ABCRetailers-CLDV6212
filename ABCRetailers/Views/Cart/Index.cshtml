@model List<ABCRetailers.Models.Cart>
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2><i class="fas fa-shopping-cart"></i> Shopping Cart</h2>
@Html.AntiForgeryToken()

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Your cart is empty. <a asp-controller="Product" asp-action="Index">Browse products</a> to add items.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>
                            <input type="number" class="form-control form-control-sm quantity-input"
                                   data-cart-id="@item.CartId"
                                   value="@item.Quantity"
                                   min="1"
                                   style="width: 80px;" />
                        </td>
                        <td>@item.TotalPrice.ToString("C")</td>
                        <td>
                            <button class="btn btn-sm btn-danger remove-item" data-cart-id="@item.CartId">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-info">
                    <th colspan="3" class="text-end">Total:</th>
                    <th>@ViewBag.CartTotal.ToString("C")</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Checkout" class="btn btn-primary btn-lg">
            <i class="fas fa-check"></i> Proceed to Checkout
        </a>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Continue Shopping
        </a>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update quantity
            $('.quantity-input').on('change', function() {
                var cartId = $(this).data('cart-id');
                var quantity = $(this).val();

                $.ajax({
                    url: '@Url.Action("Update", "Cart")',
                    type: 'POST',
                    data: {
                        cartId: cartId,
                        quantity: quantity,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Error updating cart item.');
                    }
                });
            });

            // Remove item
            $('.remove-item').on('click', function() {
                if (!confirm('Are you sure you want to remove this item?')) {
                    return;
                }

                var cartId = $(this).data('cart-id');

                $.ajax({
                    url: '@Url.Action("Remove", "Cart")',
                    type: 'POST',
                    data: {
                        cartId: cartId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Error removing item.');
                    }
                });
            });
        });
    </script>
}

