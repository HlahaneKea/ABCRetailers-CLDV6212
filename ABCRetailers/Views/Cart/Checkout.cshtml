@model List<ABCRetailers.Models.Cart>
@{
    ViewData["Title"] = "Checkout";
    var user = ViewBag.User as ABCRetailers.Models.User;
}

<h2><i class="fas fa-check-circle"></i> Checkout</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Order Summary</h4>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@item.TotalPrice.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-info">
                            <th colspan="3" class="text-end">Total:</th>
                            <th>@Model.Sum(i => i.TotalPrice).ToString("C")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Shipping Information</h4>
            </div>
            <div class="card-body">
                @if (user != null)
                {
                    <p><strong>Name:</strong> @user.Name @user.Surname</p>
                    <p><strong>Email:</strong> @user.Email</p>
                    <p><strong>Address:</strong> @(user.ShippingAddress ?? "Not provided")</p>
                }
            </div>
        </div>

        <form asp-action="ProcessOrder" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success btn-lg w-100">
                <i class="fas fa-check"></i> Confirm Order
            </button>
            <a asp-action="Index" class="btn btn-secondary w-100 mt-2">
                <i class="fas fa-arrow-left"></i> Back to Cart
            </a>
        </form>
    </div>
</div>

