<!-- Views/Upload/Index.cshtml -->
@model ABCRetailers.Models.FileUploadModel
@{
    ViewData["Title"] = "Upload Document";
}

<h2><i class="fas fa-upload"></i> Upload Document</h2>

<!-- Storage initialization reminder - only show when no success message -->
@{
    var isStorageReady = ViewBag.IsStorageInitialized == true;
}
@if (TempData["Success"] == null)
{
    if (!isStorageReady)
    {
        <div class="alert alert-warning mb-4">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Storage Not Initialized:</strong> Azure Storage resources have not been set up yet. Please go to the
            <a asp-controller="Home" asp-action="Index" class="alert-link">Home page</a>
            and click "Initialize Azure Storage" first to set up your storage resources.
        </div>
    }
    else
    {
        <div class="alert alert-success mb-4">
            <i class="fas fa-check-circle"></i>
            <strong>Storage Ready:</strong> Azure Storage has been initialized successfully. You can now upload files.
        </div>
    }
}

@{
    var role = Context.Session.GetString("UserRole");
}

<div class="row">
    @if (role == "Admin")
    {
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0"><i class="fas fa-folder-open"></i> Uploaded Payment Proofs</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">This section is reserved for listing uploaded documents. Due to time constraints, the file listing UI has not been implemented yet. Please check Azure Storage directly for uploaded files.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file-upload"></i> Submit Proof of Payment
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="ProofOfPayment" class="form-label">Choose File</label>
                            <input asp-for="ProofOfPayment" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" />
                            <span asp-validation-for="ProofOfPayment" class="text-danger"></span>
                            <div class="form-text">Accepted formats: PDF, JPG, PNG, DOC, DOCX (Max size: 10MB)</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="OrderId" class="form-label">Order ID (Optional)</label>
                                    <input asp-for="OrderId" class="form-control" placeholder="Enter related order ID" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CustomerName" class="form-label">Customer Name (Optional)</label>
                                    <input asp-for="CustomerName" class="form-control" placeholder="Enter customer name" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-lg" @(isStorageReady ? "" : "disabled")>
                                <i class="fas fa-upload"></i> Upload File
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-home"></i> Back to Home
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4">
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Upload Instructions:</h6>
                    <ul class="mb-0">
                        <li>Select your proof of payment document</li>
                        <li>Optionally provide Order ID and Customer Name for reference</li>
                        <li>File will be stored securely in Azure Storage</li>
                        <li>You will receive a confirmation once upload is complete</li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // File upload preview
        document.getElementById('ProofOfPayment').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const fileSize = (file.size / 1024 / 1024).toFixed(2);
                console.log('Selected file: ' + file.name + ' (' + fileSize + ' MB)');
            }
        });
    </script>
}